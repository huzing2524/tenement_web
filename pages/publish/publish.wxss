.publish {
  width: 100%;
  height: 100%;
  border: 1px solid rgb(236, 236, 236);
  display: flex;
  line-height: 80rpx;
}

.publish label {
  margin: 0rpx 20rpx 0rpx 20rpx;
  /* margin-left: 20rpx;
  margin-right: 20rpx; */
}

.publish input {
  position: absolute;
  left: 200rpx;
  right: 20rpx;
  height: 80rpx;
  color: black;
}

/* 图片上传区域 start */
.cell_right {
  position: absolute;
  left: 200rpx;
  color: lightgray;
}

.uploader_cell {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.uploader_item {
  float: left;
  position: relative;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 165rpx;
  height: 165rpx;
}

.uploader_item image {
  width: 100%;
  height: 100%;
}

.uploader_item_icon {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  background: #fff;
  border-radius: 50%;
}

.uploader {
  float: left;
  position: relative;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  width: 165rpx;
  height: 165rpx;
  border: 2rpx solid #d9d9d9;
  box-sizing: border-box;
}

.uploader:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.uploader:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
/* 图片上传区域 end */

