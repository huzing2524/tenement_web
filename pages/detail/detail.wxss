/* pages/detail/detail.wxss */

.publish {
  width: 100%;
  height: 100%;
  border: 1px solid rgb(236, 236, 236);
  display: flex;
  line-height: 80rpx;
}

.publish label {
  margin: 0rpx 20rpx 0rpx 20rpx;
  opacity: 0.7;
  /* margin-left: 20rpx;
  margin-right: 20rpx; */
}

.uploader_cell {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.uploader_item {
  float: left;
  position: relative;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 165rpx;
  height: 165rpx;
}

.uploader_item image {
  width: 100%;
  height: 100%;
}

.publish_button {
  display: flex;
  position: fixed;
  left: 100rpx;
  right: 100rpx;
  bottom: 50rpx;
  background-color: lightblue;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 10pt;
  color: #fff;
}

.phone_icon {
  position: absolute;
  right: 50rpx;
  margin: 10rpx auto;
}