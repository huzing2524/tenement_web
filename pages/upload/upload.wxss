/* pages/upload/upload.wxss */

.cell {
  display: flex;
  position: relative;
  height: 100rpx;
  line-height: 60rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
  transform: translate3d(0rpx, 0px, 0px);
}

.cell_left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.cell_right {
  color: #999;
  text-align: right;
}

.uploader_cell {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.uploader_item {
  float: left;
  position: relative;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  width: 165rpx;
  height: 165rpx;
}

.uploader_item image {
  width: 100%;
  height: 100%;
}

.uploader_item_icon {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  background: #fff;
  border-radius: 50%;
}

.uploader {
  float: left;
  position: relative;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  width: 165rpx;
  height: 165rpx;
  border: 2rpx solid #d9d9d9;
  box-sizing: border-box;
}

.uploader:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.uploader:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 79rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.ensure_button {
  display: flex;
  position: absolute;
  bottom: 250rpx;
  left: 80rpx;
  right: 80rpx;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: lightblue;
  font-size: 13pt;
  color: #fff;
}

.hover_action {
  opacity: 0.9;
  background: blue;
}

.ui_btn {
  font-size: 13pt;
  height: 90rpx;
  line-height: 90rpx;
  width: 85%;
  text-align: center;
  border-radius: 15rpx;
  margin: 20rpx auto;
}

.ui_btn_default {
  border: 2rpx solid #d9d9d9;
  background: #fff;
}

.ui_btn_primary {
  border: 2rpx solid #09bb07;
  background: #09bb07;
  color: #fff;
}

.ui_btn_warn {
  border: 2rpx solid #e64340;
  background: #e64340;
  color: #fff;
}

.ui-btn_disabled {
  opacity: 0.3;
}
