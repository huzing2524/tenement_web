<view class="section">
  <view class="section section_gap" wx:for-items="{{array}}" wx:for-item="item" wx:key="{{item.index}}">
    <view class="section__title">{{item.text}}</view>
    <view class="section__ctn">
      <!-- <view style="flex-direction:row;" class="flex-wrp">
