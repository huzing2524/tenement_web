        <image class='bc_pink'src="{{item.src}}"></image>
      </view> -->

      <block wx:for='{{item.src}}' wx:key='index' wx:for-item='srcItem' style="flex-direction:row;" class="flex-wrp">
        <image bindtap='topic_preview' data-id='{{item.id}}' data-url='{{answerItem}}' class='img_css' src='{{srcItem.img}}'></image>
      </block>

      <view class="info">
        <view>{{item.address}}</view><view>{{item.event}}</view><view>{{item.date}}</view>
      </view>

      <view class="info">
        <view>{{item.person}}</view>
        <view>{{item.price}}</view>
        <view bindtap='phonecall' class='tel' style="color:red;" data-sss='{{index}}'>{{item.tel}}</view>
      </view>

      <view>
        <view class="divLine"></view>
      </view>

    </view>
  </view>
</view>

